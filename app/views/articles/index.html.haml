/* Index */

.container-top.left
  .breadcrumbs
    .breadcrumbs-box
      .breadcrumbs-item
        = link_to root_path, class: "link small" do
          .icon.left
            = image_tag "icons/back.png"
          = t("home")

.container-middle.left

  = render partial: "articles", locals: { object: @articles }

  .articles
    .articles-box
      - @journal_articles.each do |journal_article|
        .articles-item
          .articles-inner
            = image_tag journal_article.thumb_box_url
          .separator.extra-small
          = link_to article_path(journal_article), class: "link gray" do
            .icon.left
              = image_tag "icons/underscore.png"
            = (journal_article.title).truncate(24)

.container-bottom.left
