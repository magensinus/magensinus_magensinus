.content
  .content-box
    .content-item
      - if object.title.presence
        %h1= object.try(:title)
      .separator.small
      - if flash[:success]
        %p.medium.green-ft= flash[:success]
      - elsif flash[:failure]
        %p.medium.red-ft= flash[:failure]
      - else
        - if object.description.presence
          .trix
            = safe_join([object.try(:description).html_safe])
    - if object.body.presence
      .separator.small
      .content-item
        .trix
          = safe_join([object.try(:body).html_safe])
.separator.small
